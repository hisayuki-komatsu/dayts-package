{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": false,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
